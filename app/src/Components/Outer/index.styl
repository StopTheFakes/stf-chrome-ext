.main-outer
	background #2972b6
	padding 20px
	position relative
	padding-bottom 60px
	&__bottom-nav
		background #fff
		position fixed
		left 0
		bottom 0
		width 100%
		height 40px
		padding 5px 15px 0
		box-shadow 0 0 10px rgba(0, 0, 0, 0.4)
		&-menu
			float right
			width 30px
			height 30px
			background url('./1.jpg') 50% 50% no-repeat
			background-size cover
			border none
			cursor pointer
			outline none
		&-list
			float left
			width 30px
			height 30px
			background url('./2.jpg') 50% 50% no-repeat
			background-size cover
			border none
			cursor pointer
			outline none